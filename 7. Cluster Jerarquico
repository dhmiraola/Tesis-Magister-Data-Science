import numpy as np
import plotly.figure_factory as ff
from scipy.cluster.hierarchy import dendrogram, linkage
from sklearn.preprocessing import StandardScaler

# Convertir las series de tiempo a un array de numpy
X = np.array(series_de_tiempo)

# Escalar los datos
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

# Realizar el clustering jer√°rquico
Z = linkage(X_scaled, method='ward')

# Crear un dendrograma 
fig = ff.create_dendrogram(X_scaled, labels=neuronas_comunes_solo_numeros, linkagefun=lambda x: linkage(x, 'ward'))

fig.update_layout(
    title='Dendrograma del Experimento C1.2',
    xaxis_title='Neuronas',
    yaxis_title='Distancia',
    width=1000,
    height=800
)

fig.show()
